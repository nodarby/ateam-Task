<p id="notice"><%= notice %></p>

<h2>
  投稿:<%= @post.text %>
</h2>

<table>
  <tbody>
  <% @comments.each_with_index do |comment , idx| %>
    <tr>
      <td>＞</td>
      <td><%= comment.text %></td>
      <td><%= link_to '削除', post_comment_path(:post_id => @post.id, :id => comment.id), method: :delete, data: {confirm: "本当に削除しますか?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>コメント投稿</h3>
<%= form_for @newcomment, :url => post_comments_path(@post) do |f| %>
  <p><%= f.text_area :text,:size=>"40"%></p>
  <%= f.hidden_field :post_id %>
  <%= f.submit %>
<% end %>

<p>
  <%= link_to '元のスレッドへ戻る' , board_path(@post.topic_id) %>
</p>
<p>
  <%= link_to 'スレッド一覧へ戻る' , boards_path %>
</p>