<div id ='main'>
  <h1>スレッドを編集</h1>

  <%= form_for(@topic, :url => board_path(@topic))  do |f| %>


    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <%= link_to 'スレッドの詳細を見る', board_path(@topic.id) %>
  <%= link_to 'スレッド一覧へ戻る', boards_path %>
</div>