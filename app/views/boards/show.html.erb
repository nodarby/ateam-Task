<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<table>
  <tbody>
  <% @posts.each_with_index do |post , idx| %>
    <tr>
      <td><%= idx + 1 %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: "OK?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>新規投稿</h3>
<%= form_for @newpost, :url => post_create_path do |f| %>
  <p>本文</p>
  <p><%= f.text_area :text %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back' , boards_path %>