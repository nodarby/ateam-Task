<p id="notice"><%= notice %></p>

<h1>
  スレッド名:<%= @topic.title %>
</h1>

<table>
  <tbody>
  <% @posts.each_with_index do |post , idx| %>
    <tr>
      <td><%= idx + 1 %>.</td>
      <td><%= post.text %></td>
      <td><%= link_to "コメントを見る", post_path(post) %></td>
      <td><%= link_to '削除', post_path(post), method: :delete, data: {confirm: "OK?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>新規投稿</h3>
<%= form_for @newpost, :url => posts_path do |f| %>
  <p>本文</p>
  <p><%= f.text_area :text %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>

<%= link_to 'スレッド一覧へ戻る' , boards_path %>